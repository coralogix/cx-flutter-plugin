{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Boot iOS Simulator",
            "type": "shell",
            "command": "cd ${workspaceFolder}/example && flutter emulators --launch apple_ios_simulator",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Boot Android Emulator",
            "type": "shell",
            "command": "cd ${workspaceFolder}/example && if flutter devices | grep -q 'android'; then echo 'Android emulator already running'; else flutter emulators --launch Medium_Phone_API_35 && sleep 12; fi",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}